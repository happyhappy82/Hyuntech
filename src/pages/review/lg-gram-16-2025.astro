  { name: 'LG 그램 16 (2025)', price: '159만원~', weight: '1.19kg', cpu: 'Intel Ultra 7', battery: '22시간', display: '16" WQXGA IPS', target: '휴대성 + 배터리', productId: 'lg-gram-16', isBest: true },
