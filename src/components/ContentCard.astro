---
interface Props {
  href: string;
  emoji: string;
  contentType: string;
  title: string;
  description: string;
  date: string;
  readTime: string;
  featured?: boolean;
}

const { href, emoji, contentType, title, description, date, readTime, featured } = Astro.props;

// Format date to YYYY-MM-DD for display and ISO for datetime
const formatDateDisplay = (dateStr: string) => {
  const d = new Date(dateStr);
  if (!isNaN(d.getTime())) {
    return d.toISOString().split('T')[0]; // YYYY-MM-DD
  }
  return dateStr;
};

const formatDateISO = (dateStr: string) => {
  const d = new Date(dateStr);
  if (!isNaN(d.getTime())) {
    return d.toISOString();
  }
  return dateStr;
};

const displayDate = formatDateDisplay(date);
const isoDate = formatDateISO(date);
---

<a href={href} class:list={['content-card', { featured }]}>
  <div class="content-card-image" set:html={emoji} />
  <div class="content-card-body">
    <span class="content-type-tag">{contentType}</span>
    <h3>{title}</h3>
    <p>{description}</p>
    <div class="content-meta">
      <time datetime={isoDate}>{displayDate} 업데이트</time>
      <span class="dot-sep"></span>
      <span>{readTime} 읽기</span>
    </div>
  </div>
</a>

<style>
  .content-card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all 0.3s ease;
    display: block;
  }
  .content-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: var(--primary);
  }
  .content-card.featured {
    border: 2px solid transparent;
    background-image: linear-gradient(var(--bg-card), var(--bg-card)),
                      linear-gradient(135deg, var(--primary), var(--accent));
    background-origin: border-box;
    background-clip: padding-box, border-box;
  }
  .content-card.featured:hover {
    box-shadow: 0 10px 20px rgba(37,99,235,0.15);
  }
  .content-card-image {
    height: 160px;
    min-height: 160px;
    background: var(--bg-secondary);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 48px;
    position: relative;
  }
  .featured .content-card-image {
    background: linear-gradient(135deg, rgba(37,99,235,0.08), rgba(245,158,11,0.08));
  }
  .content-card-body {
    padding: 20px;
  }
  .content-type-tag {
    display: inline-block;
    font-size: 11px;
    font-weight: 600;
    color: var(--primary);
    background: var(--primary-light);
    padding: 3px 10px;
    border-radius: 12px;
    margin-bottom: 10px;
  }
  .content-card-body h3 {
    font-size: 16px;
    font-weight: 700;
    line-height: 1.4;
    margin-bottom: 8px;
    color: var(--text);
  }
  .content-card-body p {
    font-size: 14px;
    color: var(--text-secondary);
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .content-meta {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-top: 14px;
    font-size: 12px;
    color: var(--text-light);
  }
  .dot-sep {
    width: 3px;
    height: 3px;
    border-radius: 50%;
    background: var(--text-light);
  }
</style>
