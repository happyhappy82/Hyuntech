---
import BaseLayout from './BaseLayout.astro';
import { categoryMeta, type Category } from '../data/content-registry';

interface Props {
  title: string;
  description: string;
  category: string;
  contentType: string;
  date: string;
  readTime: string;
  featured: boolean;
}

const { title, description, category, contentType, date, readTime, featured } = Astro.props;
const catMeta = categoryMeta[category as Category] || { name: category, description: '', emoji: '&#128196;' };

const formattedDate = (() => {
  try {
    const d = new Date(date);
    return `${d.getFullYear()}-${String(d.getMonth() + 1).padStart(2, '0')}-${String(d.getDate()).padStart(2, '0')}`;
  } catch {
    return date;
  }
})();

const siteUrl = 'https://hyuntech.ai.kr';
const pageUrl = `${siteUrl}/category/${category}/${Astro.url.pathname.split('/').filter(Boolean).pop()}/`;

// ISO date for Schema.org
const isoDate = (() => {
  try {
    return new Date(date).toISOString();
  } catch {
    return date;
  }
})();

// Article Schema.org JSON-LD
const articleSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": title,
  "description": description,
  "datePublished": isoDate,
  "dateModified": isoDate,
  "author": {
    "@type": "Organization",
    "name": "HyunTech",
    "url": siteUrl,
  },
  "publisher": {
    "@type": "Organization",
    "name": "HyunTech",
    "url": siteUrl,
    "logo": {
      "@type": "ImageObject",
      "url": `${siteUrl}/og-default.png`,
    },
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": pageUrl,
  },
});

// BreadcrumbList Schema.org JSON-LD
const breadcrumbSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "홈",
      "item": siteUrl,
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": catMeta.name,
      "item": `${siteUrl}/category/${category}/`,
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": title,
    },
  ],
});
---

<BaseLayout title={`${title} - HyunTech`} description={description} ogType="article" datePublished={isoDate} dateModified={isoDate}>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={articleSchema} />
    <script type="application/ld+json" set:html={breadcrumbSchema} />
  </Fragment>
  <main class="post-page">
    <!-- 브레드크럼 -->
    <nav class="breadcrumb">
      <div class="container">
        <a href="/">홈</a>
        <span>›</span>
        <a href={`/category/${category}/`}>{catMeta.name}</a>
        <span>›</span>
        <span class="current">{title}</span>
      </div>
    </nav>

    <!-- 글 헤더 -->
    <header class="post-header">
      <div class="container">
        <div class="post-meta-tags">
          <span class="badge">{contentType}</span>
          {featured && <span class="badge badge-featured">추천</span>}
        </div>
        <h1>{title}</h1>
        <p class="post-description">{description}</p>
        <div class="post-meta">
          <span class="meta-item">
            <Fragment set:html={catMeta.emoji} /> {catMeta.name}
          </span>
          <span class="meta-divider">·</span>
          <time class="meta-item" datetime={isoDate}>{formattedDate}</time>
          <span class="meta-divider">·</span>
          <span class="meta-item">읽는 시간 {readTime}</span>
        </div>
      </div>
    </header>

    <!-- 글 본문 -->
    <article class="post-content">
      <div class="container">
        <div class="prose">
          <slot />
        </div>
      </div>
    </article>
  </main>
</BaseLayout>

<style>
  .post-page {
    padding-bottom: 4rem;
  }

  .breadcrumb {
    padding: 1rem 0;
    font-size: 0.875rem;
    color: var(--text-secondary);
  }

  .breadcrumb .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .breadcrumb a {
    color: var(--text-secondary);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    color: var(--primary);
  }

  .breadcrumb span {
    margin: 0 0.25rem;
  }

  .breadcrumb .current {
    color: var(--text);
    max-width: 200px;
    display: inline-block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    vertical-align: bottom;
  }

  .post-header {
    padding: 2rem 0;
    border-bottom: 1px solid var(--border);
  }

  .post-header .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .post-meta-tags {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 999px;
    font-size: 0.8rem;
    font-weight: 600;
    background: var(--primary);
    color: white;
  }

  .badge-featured {
    background: var(--accent);
  }

  .post-header h1 {
    font-size: 2rem;
    font-weight: 800;
    line-height: 1.3;
    color: var(--text);
    margin: 0 0 1rem;
  }

  .post-description {
    font-size: 1.1rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin: 0 0 1.5rem;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    color: var(--text-secondary);
  }

  .meta-divider {
    opacity: 0.5;
  }

  .post-content {
    padding: 2.5rem 0;
  }

  .post-content .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Prose 스타일 (Markdown 렌더링용) */
  .prose :global(h2) {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text);
    margin: 2.5rem 0 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--border);
  }

  .prose :global(h3) {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text);
    margin: 2rem 0 0.75rem;
  }

  .prose :global(h4) {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text);
    margin: 1.5rem 0 0.5rem;
  }

  .prose :global(p) {
    font-size: 1rem;
    line-height: 1.8;
    color: var(--text);
    margin: 0 0 1.25rem;
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin: 0 0 1.25rem;
    padding-left: 1.5rem;
  }

  .prose :global(li) {
    font-size: 1rem;
    line-height: 1.8;
    color: var(--text);
    margin-bottom: 0.25rem;
  }

  .prose :global(blockquote) {
    border-left: 4px solid var(--primary);
    padding: 0.75rem 1.25rem;
    margin: 1.5rem 0;
    background: var(--bg-secondary);
    border-radius: 0 8px 8px 0;
  }

  .prose :global(blockquote p) {
    margin: 0;
  }

  .prose :global(code) {
    background: var(--bg-secondary);
    padding: 0.15rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9em;
    color: var(--primary);
  }

  .prose :global(pre) {
    background: var(--bg-secondary);
    padding: 1.25rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .prose :global(pre code) {
    background: none;
    padding: 0;
    color: var(--text);
  }

  .prose :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1.5rem 0;
  }

  .prose :global(a) {
    color: var(--primary);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .prose :global(a:hover) {
    opacity: 0.8;
  }

  .prose :global(hr) {
    border: none;
    border-top: 1px solid var(--border);
    margin: 2rem 0;
  }

  .prose :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
    font-size: 0.95rem;
  }

  .prose :global(th),
  .prose :global(td) {
    padding: 0.75rem 1rem;
    border: 1px solid var(--border);
    text-align: left;
  }

  .prose :global(th) {
    background: var(--bg-secondary);
    font-weight: 600;
  }

  .prose :global(table td:first-child) {
    white-space: nowrap;
  }

  .prose :global(details) {
    background: var(--bg-secondary);
    border-radius: 8px;
    padding: 1rem 1.25rem;
    margin: 1rem 0;
  }

  .prose :global(summary) {
    font-weight: 600;
    cursor: pointer;
  }

  @media (max-width: 768px) {
    .post-header h1 {
      font-size: 1.5rem;
    }

    .post-description {
      font-size: 1rem;
    }

    .post-meta {
      flex-wrap: wrap;
    }
  }
</style>
